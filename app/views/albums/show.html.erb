<h1><%= @album.title %></h1>


<ul>
<% @album.tracks.each do |track|%>
  <li>
    <a href="<%= track_url(track)%>"><%= track.title%></a>
  </li>
<% end %>
</ul>


<%= content_for :footer do %>
  <a href="<%=new_album_track_url(@album)%>">New Track</a>

  <a href="<%= edit_album_url(@album)%>">Edit Album</a>

  <form action="<%=album_url(@album)%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <%= auth_token %>
    <input type="submit" value="Destroy Album">
  </form>

  <a href="<%= band_url(@album.band)%>">Back to <%=@album.band.name%></a>
<% end %>